<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_layout"
    tools:context=".Noticeboard">

    <TextView
        android:id="@+id/noticeboardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_title"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/padding_left"
        android:text="@string/title_activity_noticeboard"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/publishNoticeButton"
        android:layout_width="@dimen/width_buttons"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_below="@id/noticeboardTitle"
        android:background="@drawable/background_color"
        android:onClick="publishNotice"
        android:text="@string/publish_notice_button"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listNotices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/publishNoticeButton"
        android:layout_marginTop="@dimen/margin_top_title"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:divider="@drawable/list_divider"/>

</RelativeLayout>