<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_layout"
    tools:context=".ProfessorConsultingHours">

    <TextView
        android:id="@+id/professorConsultingHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_title"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/padding_left"
        android:text="@string/consulting_hours"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listConsultingHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/professorConsultingHours"
        android:layout_marginTop="@dimen/margin_top_title"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:divider="@drawable/list_divider"/>


    <LinearLayout
        android:id="@+id/emptyView"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_header"
        android:layout_below="@+id/professorConsultingHours"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textNoResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/margin_top"
            android:text="@string/no_consulting_hours_text"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

</RelativeLayout>