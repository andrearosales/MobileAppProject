<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_layout"
    android:fillViewport="true"
    tools:context=".DidacticalInfoMenu">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleDidacticalInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_top_title"
                android:text="@string/didactical_information"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleDidacticalInformation"
                android:layout_marginTop="@dimen/margin_top_title"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonLocateClasrooms"
                    android:layout_width="@dimen/width_buttons"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="center"
                    android:background="@drawable/background_color"
                    android:text="@string/locate_classrooms"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:onClick=""/>

                <Button
                    android:id="@+id/buttonSchedule"
                    android:layout_width="@dimen/width_buttons"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_top"
                    android:background="@drawable/background_color"
                    android:text="@string/search_timetables"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:onClick="viewJobOffers"/>

                <Button
                    android:id="@+id/buttonConsultingHours"
                    android:layout_width="@dimen/width_buttons"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_top"
                    android:background="@drawable/background_color"
                    android:text="@string/view_consulting_hours"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:onClick="viewMessages"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
